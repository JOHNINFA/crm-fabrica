FROM node:18-alpine

WORKDIR /app

# 1. Instalar dependencias
COPY package*.json ./
RUN npm install

# 2. Copiar c칩digo fuente
COPY . .

# 3. Argumentos de construcci칩n (quemados en el build)
ARG REACT_APP_API_URL
ENV REACT_APP_API_URL=$REACT_APP_API_URL

# 4. Comando por defecto: Construir y salir
# Esto llenar치 el volumen montado en /app/build
CMD ["npm", "run", "build"]
