# .env.example
# COPIAR A .env Y COMPLETAR CON TUS DATOS REALES
# NO SUBIR .env A GIT (ya está en .gitignore)

# ==========================================
# BASE DE DATOS
# ==========================================
DB_NAME=fabrica
DB_USER=postgres
DB_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO

# ==========================================
# DJANGO
# ==========================================
# Generar con: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=GENERAR_SECRET_KEY_SEGURO_AQUI

# En producción: False
DEBUG=False

# Dominios permitidos (separados por coma)
ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com,IP_DEL_VPS

# ==========================================
# FRONTEND
# ==========================================
# URL de la API para el frontend
API_URL=https://tu-dominio.com

# ==========================================
# OPCIONAL: REDIS (para Celery)
# ==========================================
REDIS_URL=redis://redis:6379/0

# ==========================================
# EJEMPLO PARA DESARROLLO LOCAL
# ==========================================
# DB_NAME=fabrica
# DB_USER=postgres
# DB_PASSWORD=12345
# SECRET_KEY=tu-secret-key-local
# DEBUG=True
# ALLOWED_HOSTS=*
# API_URL=http://localhost:8000
